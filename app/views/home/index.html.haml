.row
  .col-md-4.col-md-offset-4
    = link_to image_tag('smile.jpg'), '/total_rating'
.row
  - if @voted
    .col-md-4.col-md-offset-4
      Thanks for voting :)
  - else
    .col-md-3
      = form_for @review do |f|
        = f.hidden_field :rating, value: 4
        = f.submit :class => 'very_happy', value: ''
    .col-md-3
      = form_for @review do |f|
        = f.hidden_field :rating, value: 3
        = f.submit :class => 'happy', value: ''
    .col-md-3
      = form_for @review do |f|
        = f.hidden_field :rating, value: 2
        = f.submit :class => 'sad', value: ''
    .col-md-3
      = form_for @review do |f|
        = f.hidden_field :rating, value: 1
        = f.submit :class => 'very_sad', value: ''
